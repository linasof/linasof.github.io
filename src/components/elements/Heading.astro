---
import type { HTMLAttributes } from "astro/types";

const headingOptions = {
    h1: 'lg:text-216 md:text-128 text-96',
    h2: 'lg:text-128 md:text-80 text-64',
    h3: 'lg:text-80 md:text-48 text-40',
    h4: 'lg:text-48 md:text-40 text-32',
    h5: 'lg:text-32 md:text-24 text-20',
    h6: 'lg:text-24 md:text-20 text-16'
};

interface Props extends HTMLAttributes<'h1'> {
    tagName: keyof typeof headingOptions;
    tagSize: keyof typeof headingOptions;
};

const { tagName, tagSize, class: className, ...rest} = Astro.props;
const Tag = tagName;

// common style for all headings
const baseStyle = "font-grunge uppercase text-base-900 tracking-tight leading-none";
---

<Tag class:list={[baseStyle, headingOptions[tagSize], className]} {...rest}><slot /></Tag>