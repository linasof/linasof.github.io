---
// components
import Link from "../../elements/Link.astro";
import Container from "../../elements/Container.astro";

// props
type Props = {
    prev?: string;
    next?: string;
}

const { prev, next } = Astro.props;
---

<Container variant={'lg'}>
    {
        prev && (
            <Link variant={'button'} href={prev}>Anterior</Link>
        )
    }
    {
        next && (
            <Link variant={'button'} href={next}>Siguiente</Link>
        )
    }
</Container>