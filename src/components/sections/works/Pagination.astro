---
import Link from "../../elements/Link.astro";
import Container from "../../elements/Container.astro";

type Props = {
    prev?: string;
    next?: string;
}

const { prev, next } = Astro.props;
---

<Container variant={'lg'}>
    {
        prev && (
            <Link variant={'button'} href={prev}>Previous</Link>
        )
    }
    {
        next && (
            <Link variant={'button'} href={next}>Next</Link>
        )
    }
</Container>